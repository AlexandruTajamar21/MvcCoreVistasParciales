@{
    string usuario = Context.Session.GetString("USUARIO");
}

@if (usuario == null)
{
    <a asp-controller="Home" asp-action="LogIn" class="nav-item">LogIn</a>
}
else
{
    <li>
        <a asp-controller="Home" asp-action="SignOut" class="nav-link text-danger">Sign Out @usuario</a>
    </li>
    <li>
        <a class="nav-link" href="#">Perfil</a>
    </li>
    <li>
        <a class="nav-link" href="#">MisPedidos</a>
    </li>
    <li>
        <a class="nav-link" href="#">Comentarios</a>
    </li>
}